<div class="bg-gray-800 p-10 rounded-lg shadow-lg max-w-lg mx-auto text-blue text-center mt-32">
  <%= form_for @activity, url: {action: "create"} do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :category %><br />
      <%= f.text_field :category %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :price %><br />
      <%= f.text_field :price %>
    </div>

    <%= f.submit "Create" %>
  <% end %>
</div>


