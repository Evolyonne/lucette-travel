<nav class="w-screen container justify-between sticky top-0 z-1">
  <ul>
    <li>
      <div class="padding-bell text-gray-700 p-3 shadow-custom-navbar">
        <%= link_to "#", onclick: "notifClick()" do %>
          <div data-controller="fakenotif" data-fakenotif-target="count">
            <i class="far fa-bell text-gray text-2xl text-gray-600"></i>
          </div>
        <% end %>
      </div>
    </li>
    <li>
      <!-- Start Burger menu -->
      <div class="burger-toggle">   <!-- Button to toggle -->
        <div class="burger-toggle-bar"></div>
      </div>
      <!-- Inside Burger -->
      <div class="flex items-center justify-center burger" id="burger"> <!-- Contenu -->
        <ul>
          <li>
            <div class="">
              <% Trip.all.each do |trip| %>
                <div class="wrapper-card-burger relative shadow-custom-card h-44 text-center mx-4 mb-10">
                  <%= link_to trip_path(trip) do %>
                    <!-- <div class="box-content relative rounded-2xl mb-6  border-2 border-yellow-500"> -->
                      <%= image_tag "#{trip.photo_title}.jpg", alt: "#{trip.name}", class: "rounded-lg" %>
                        <div class="box-content container absolute top-3 content-between">
                          <div class="text-white">
                            <h5><%= trip.name.upcase %></h5>
                          </div>
                          <div>
                            <p>From <%= trip.begin_date %> to <%= trip.end_date %></p>
                          </div>
                        </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </li>
        </ul>
      </div>
      <!-- End Burger menu -->
    </li>
  </ul>
</nav>

