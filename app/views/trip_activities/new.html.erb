<div class="wrapper-container">
  <div class="wrapper-main">
    <div class="profiles">
      <% @activities.each do |activity| %>
        <div class="profile" data-activity-id="<%= activity.id %>">
          <%= image_tag "#{activity.photo_title}.jpg", alt: "#{activity.name}", class: "profile-image rounded-xl" %>
          <div class="profile-infos">
            <div class="profile-name">
              <%= activity.name %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- <div class="hidden"> -->
  <%= simple_form_for [TripActivity.new], url: root_path, method: :get do |f| %>
    <%= f.input :date, input_html: {value: @planned_at}, html5: true %>
    <%= f.label :start_hour, "Start hour" %>
    <%#= f.input :start_hour %>
    <%#= f.input :trip_id, as: :hidden, value: @current_trip %>
    <%= f.input :activity_id, value: nil %>
    <%= f.submit %>
  <% end %>
<!-- </div> -->

  <%= render 'shared/footer' %>
