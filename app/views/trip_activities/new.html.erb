<!-- START Tinder like -->
<div class="wrapper-container-tinder h-96 overflow-hidden mx-auto pt-10" id="tinder-list">
  <div class="wrapper-main">
    <div class="profiles">
      <% @activities.each do |activity| %>
        <div class="profile" data-activity-id="<%= activity.id %>">
          <%= image_tag "#{activity.photo_title}.jpg", alt: "#{activity.name}", class: "profile-image rounded-xl" %>
          <div class="profile-infos">
            <div class="profile-name">
              <%= activity.name %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
<!-- END Tinder like -->

<div class="hidden absolute top-28 w-72 text-center left-16 border-2 border-gray-300">
  <%= simple_form_for [@trip, @tripActivity], url: trip_trip_activities_path(@trip,@tripActivity) do |f| %>
    <%= f.input :date,
                required: true,
                input_html: { value: @planned_at,
                              class: "text-white border-gray-300 focus:outline-none focus:border-indigo-500 sm:text-sm rounded-md" },
                              html5: true %>
    <%= f.input :start_hour,
                as: :select,
                required: true,
                # label: "Start Hour",
                collection: (6..20).map {|n| ["#{n}:00","#{n}:30"]}.flatten,
                wrapper_html: { class: 'flex flex-col items-center justify-center mx-auto w-32' },
                input_html: { type: :date,
                              class: 'm-2 pl-4 pr-1 py-2 text-white border-gray-300 focus:outline-none focus:border-indigo-500 sm:text-sm rounded-md' }%>

    <%#= f.input :trip_id, as: :hidden, value: @current_trip%>
    <%= f.input :activity_id, as: :hidden, value: nil %>
    <%= f.submit value: "Add Activity", class: "bg-green-400 px-5 py-2 rounded-md text-white" %>
  <% end %>
</div>

<div class="wrapper-container" id="map"
  style="width: 100%; height: 250px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<%= render 'shared/footer' %>
